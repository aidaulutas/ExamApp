@model List<SinavUygulamasiData.Model.QuestionType>
@{
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Question Type List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="QuestionType" asp-action="Create" class="btn btn-primary ">
                <span>Create Question Type </span>
            </a>
        </div>
    </div>
    <div class="row">

        <table class="table table-bordered table table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Question Type Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var questionType in Model)
                {
                    <tr>
                        <td>@questionType.Name</td>
                        <td>
                            <a asp-controller="QuestionType" asp-action="Update" asp-route-id="@questionType.Id" class="btn btn-primary">
                                Update
                            </a>

                            <a asp-controller="QuestionType" asp-action="Delete" asp-route-id="@questionType.Id" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>



</div>
