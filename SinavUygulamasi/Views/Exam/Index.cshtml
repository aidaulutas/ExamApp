@model List<SinavUygulamasiData.Model.Exam>
@{
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Exam List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Exam" asp-action="Create" class="btn btn-primary ">
                <span>Create Exam </span>
            </a>
        </div>
    </div>
    <div class="row">

        <table class="table table-bordered table table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Exam Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exam in Model)
                {
                    <tr>
                        <td>@exam.Name</td>
                        <td>
                           
                            <a asp-controller="Exam" asp-action="Update" asp-route-id="@exam.Id" class="btn btn-primary">
                                Update
                            </a>

                            <a asp-controller="Exam" asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-danger">
                                Delete
                            </a>

                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>



</div>