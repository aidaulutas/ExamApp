@model List<SinavUygulamasiData.Model.DifficultyLevel>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Difficulty Level List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="DifficultyLevel" asp-action="Create" class="btn btn-primary ">
                <span>Create Difficulty Level </span>
            </a>
        </div>
    </div>
    <div class="row">

        <table class="table table-bordered table table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Difficulty Level Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-controller="DifficultyLevel" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">
                                Update
                            </a>

                            <a asp-controller="DifficultyLevel" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>



</div>
@{
}
